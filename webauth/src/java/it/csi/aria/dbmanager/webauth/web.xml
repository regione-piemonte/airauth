<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>

	<servlet>
		<servlet-name>webauth</servlet-name>
		<servlet-class>it.csi.aria.dbmanager.webauth.WebAuth</servlet-class>
		<load-on-startup>1</load-on-startup>
    </servlet>

	<servlet-mapping>
		<servlet-name>webauth</servlet-name>
		<url-pattern>/webauth</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ariawebPortal</servlet-name>
		<servlet-class>it.csi.aria.portal.servlet.PortalServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ariawebPortal</servlet-name>
		<url-pattern>/ariaweb_portal</url-pattern>
	</servlet-mapping>

</web-app>
